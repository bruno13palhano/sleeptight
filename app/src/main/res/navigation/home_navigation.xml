<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home_navigation"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.bruno13palhano.sleeptight.ui.home.HomeFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_home_to_login"
            app:destination="@id/login_navigation"
            app:popUpTo="@id/homeFragment"
            app:popUpToInclusive="true" />

        <action
            android:id="@+id/action_home_to_babyStatus"
            app:destination="@id/babyStatusFragment" />

        <action
            android:id="@+id/action_home_to_babyStatusTitleAndDate"
            app:destination="@id/babyStatusTitleAndDateFragment" />
    </fragment>

    <fragment
        android:id="@+id/babyStatusFragment"
        android:name="com.bruno13palhano.sleeptight.ui.babystatus.BabyStatusFragment"
        android:label="@string/baby_status_label"
        tools:layout="@layout/fragment_baby_status" />

    <fragment
        android:id="@+id/babyStatusTitleAndDateFragment"
        android:name="com.bruno13palhano.sleeptight.ui.babystatus.newbabystatus.NewBabyStatusTitleAndDateFragment"
        android:label="@string/baby_status_title_and_date"
        tools:layout="@layout/fragment_new_baby_status_title_and_date">

        <action
            android:id="@+id/action_babyStatusFragment_to_heightAndWeight"
            app:destination="@id/babyStatusHeightAndWeightFragment" />
    </fragment>

    <fragment
        android:id="@+id/babyStatusHeightAndWeightFragment"
        android:name="com.bruno13palhano.sleeptight.ui.babystatus.newbabystatus.NewBabyStatusHeightAndWeightFragment"
        android:label="@string/baby_status_height_and_weight"
        tools:layout="@layout/fragment_new_baby_status_height_and_weight">

        <action
            android:id="@+id/action_babyStatusHeightAndWeight_to_home"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/homeFragment"
            app:popUpToInclusive="true" />
    </fragment>
</navigation>