<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home_navigation"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.bruno13palhano.sleeptight.ui.home.HomeFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_home_to_addNewNap"
            app:destination="@id/new_nap_navigation" />

        <action
            android:id="@+id/action_home_to_nap"
            app:destination="@id/napFragment" />
    </fragment>

    <fragment
        android:id="@+id/napFragment"
        android:name="com.bruno13palhano.sleeptight.ui.nap.NapFragment"
        android:label="@string/nap_label"
        tools:layout="@layout/fragment_nap" />
</navigation>