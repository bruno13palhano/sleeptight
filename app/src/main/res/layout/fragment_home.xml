<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <data>
        <variable
            name="uiEvents"
            type="com.bruno13palhano.sleeptight.ui.home.HomeFragment" />

        <variable
            name="viewModel"
            type="com.bruno13palhano.sleeptight.ui.home.HomeViewModel" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ui.home.HomeFragment">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/profile_image"
                android:layout_width="112dp"
                android:layout_height="112dp"
                android:layout_gravity="center_vertical|end"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="32dp"
                android:scaleType="centerCrop"
                android:src="@drawable/baseline_image_24"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/ImageViewRounded" />

            <TextView
                android:id="@+id/current_baby_status_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="@string/current_baby_status_label"
                android:textAppearance="?attr/textAppearanceHeadline5"
                app:layout_constraintBottom_toBottomOf="@+id/profile_image"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/profile_image"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/baby_name_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:hint="@string/home_baby_name_label"
                android:textAppearance="?attr/textAppearanceBody1"
                app:drawableStartCompat="@drawable/baseline_label_24"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/current_baby_status_label" />

            <TextView
                android:id="@+id/baby_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:gravity="center_vertical"
                android:hint="@string/baby_name_label"
                android:text="@{viewModel.babyName}"
                android:textAppearance="?attr/textAppearanceBody1"
                app:layout_constraintBottom_toBottomOf="@+id/baby_name_label"
                app:layout_constraintStart_toEndOf="@+id/baby_name_label"
                app:layout_constraintTop_toTopOf="@+id/baby_name_label" />

            <TextView
                android:id="@+id/height_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:hint="@string/home_height_label"
                android:textAppearance="?attr/textAppearanceBody1"
                app:drawableStartCompat="@drawable/baseline_square_foot_24"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/baby_name_label" />

            <TextView
                android:id="@+id/height"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:gravity="center_vertical"
                android:hint="@string/birth_height_label"
                android:text="@{viewModel.height}"
                android:textAppearance="?attr/textAppearanceBody1"
                app:layout_constraintBottom_toBottomOf="@+id/height_label"
                app:layout_constraintStart_toEndOf="@+id/height_label"
                app:layout_constraintTop_toTopOf="@+id/height_label" />

            <TextView
                android:id="@+id/weight_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:hint="@string/home_weight_label"
                android:textAppearance="?attr/textAppearanceBody1"
                app:drawableStartCompat="@drawable/baseline_balance_24"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/height_label" />

            <TextView
                android:id="@+id/weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:gravity="center_vertical"
                android:hint="@string/birth_weight_label"
                android:text="@{viewModel.weight}"
                android:textAppearance="?attr/textAppearanceBody1"
                app:layout_constraintBottom_toBottomOf="@+id/weight_label"
                app:layout_constraintStart_toEndOf="@+id/weight_label"
                app:layout_constraintTop_toTopOf="@+id/weight_label" />

            <LinearLayout
                android:id="@+id/nap_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/weight_label">

                <TextView
                    android:id="@+id/last_nap_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="24dp"
                    android:text="@string/last_nap_label"
                    android:textAppearance="?attr/textAppearanceHeadline5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/weight_label" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/nap_title_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:drawablePadding="8dp"
                        android:gravity="center_vertical"
                        android:hint="@string/home_title_label"
                        android:textAppearance="?attr/textAppearanceBody1"
                        app:drawableStartCompat="@drawable/baseline_label_24" />

                    <TextView
                        android:id="@+id/nap_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:gravity="center_vertical"
                        android:hint="@string/title_label"
                        android:text="@{viewModel.napTitle}"
                        android:textAppearance="?attr/textAppearanceBody1" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/nap_sleepingTime_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:drawablePadding="8dp"
                        android:gravity="center_vertical"
                        android:hint="@string/home_sleeping_time_label"
                        android:textAppearance="?attr/textAppearanceBody1"
                        app:drawableStartCompat="@drawable/baseline_timer_24" />

                    <TextView
                        android:id="@+id/nap_sleepingTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:gravity="center_vertical"
                        android:hint="@string/sleeping_time_label"
                        android:text="@{viewModel.napSleepingTime}"
                        android:textAppearance="?attr/textAppearanceBody1" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/nap_date_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:drawablePadding="8dp"
                        android:gravity="center_vertical"
                        android:hint="@string/date_tag"
                        android:textAppearance="?attr/textAppearanceBody1"
                        app:drawableStartCompat="@drawable/baseline_calendar_month_24" />

                    <TextView
                        android:id="@+id/nap_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:gravity="center_vertical"
                        android:hint="@string/date_label"
                        android:text="@{viewModel.napDate}"
                        android:textAppearance="?attr/textAppearanceBody1" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/notification_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/nap_layout">
                <TextView
                    android:id="@+id/last_notification_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="24dp"
                    android:text="@string/last_notification_label"
                    android:textAppearance="?attr/textAppearanceHeadline5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/nap_date_label" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/notification_title_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:drawablePadding="8dp"
                        android:gravity="center_vertical"
                        android:hint="@string/home_title_label"
                        android:textAppearance="?attr/textAppearanceBody1"
                        app:drawableStartCompat="@drawable/baseline_label_24" />

                    <TextView
                        android:id="@+id/notification_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:gravity="center_vertical"
                        android:hint="@string/title_label"
                        android:text="@{viewModel.notificationTitle}"
                        android:textAppearance="?attr/textAppearanceBody1"
                        app:layout_constraintBottom_toBottomOf="@+id/notification_title_label" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/notification_date_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:drawablePadding="8dp"
                        android:gravity="center_vertical"
                        android:hint="@string/date_tag"
                        android:textAppearance="?attr/textAppearanceBody1"
                        app:drawableStartCompat="@drawable/baseline_calendar_month_24" />

                    <TextView
                        android:id="@+id/notification_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:gravity="center_vertical"
                        android:hint="@string/date_label"
                        android:text="@{viewModel.notificationDate}"
                        android:textAppearance="?attr/textAppearanceBody1" />
                </LinearLayout>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</layout>