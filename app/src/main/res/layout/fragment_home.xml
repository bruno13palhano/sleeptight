<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <data>
        <variable
            name="uiEvents"
            type="com.bruno13palhano.sleeptight.ui.home.HomeFragment" />

        <variable
            name="viewModel"
            type="com.bruno13palhano.sleeptight.ui.home.HomeViewModel" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ui.home.HomeFragment">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/status_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="?android:windowBackground"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:cardCornerRadius="0dp"
                app:cardElevation="4dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/profile_image"
                    android:layout_width="112dp"
                    android:layout_height="112dp"
                    android:scaleType="centerCrop"
                    android:layout_marginHorizontal="16dp"
                    android:src="@drawable/baseline_image_24"
                    android:layout_gravity="center_vertical|end"
                    app:shapeAppearanceOverlay="@style/ImageViewRounded" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/current_baby_status_label"
                        android:layout_margin="16dp"
                        android:textAppearance="?attr/textAppearanceHeadline5" />
                    <TextView
                        android:id="@+id/baby_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:text="@{viewModel.babyName}"
                        android:hint="@string/baby_name_label"
                        android:gravity="center_vertical"
                        android:drawablePadding="8dp"
                        android:textAppearance="?attr/textAppearanceBody1"
                        app:drawableStartCompat="@drawable/baseline_label_24" />
                    <TextView
                        android:id="@+id/height"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginTop="8dp"
                        android:text="@{viewModel.height}"
                        android:gravity="center_vertical"
                        android:hint="@string/birth_height_label"
                        android:drawablePadding="8dp"
                        android:textAppearance="?attr/textAppearanceBody1"
                        app:drawableStartCompat="@drawable/baseline_square_foot_24" />
                    <TextView
                        android:id="@+id/weight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="16dp"
                        android:text="@{viewModel.weight}"
                        android:hint="@string/birth_weight_label"
                        android:gravity="center_vertical"
                        android:drawablePadding="8dp"
                        android:textAppearance="?attr/textAppearanceBody1"
                        app:drawableStartCompat="@drawable/baseline_balance_24" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</layout>