<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="1dp"
        app:cardCornerRadius="0dp"
        app:cardBackgroundColor="?android:windowBackground"
        app:cardElevation="4dp">

        <TextView
            android:id="@+id/delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_margin="8dp"
            app:drawableStartCompat="@drawable/baseline_delete_24" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_label"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:gravity="center_vertical"
                android:layout_marginHorizontal="16dp"
                android:drawablePadding="8dp"
                app:drawableStartCompat="@drawable/baseline_notifications_24" />
            <TextView
                android:id="@+id/hour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hour"
                android:textAppearance="?attr/textAppearanceBody2"
                android:gravity="center_vertical"
                android:layout_marginHorizontal="16dp"
                android:drawablePadding="8dp"
                app:drawableStartCompat="@drawable/baseline_timer_24"/>
            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/date_label"
                android:textAppearance="?attr/textAppearanceBody2"
                android:gravity="center_vertical"
                android:layout_marginHorizontal="16dp"
                android:drawablePadding="8dp"
                app:drawableStartCompat="@drawable/baseline_calendar_month_24" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>
